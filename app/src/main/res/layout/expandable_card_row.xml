<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_colorprimary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/wpthumbnail"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:fitsSystemWindows="true"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/wptitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wpthumbnail"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/company_title_padding"
                android:paddingTop="@dimen/company_title_padding"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/wpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/wptitle"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/company_title_padding"
                android:paddingLeft="@dimen/company_title_padding"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
